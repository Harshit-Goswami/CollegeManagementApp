<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_dialog_bg"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    >
    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        style="@style/circular"
        android:background="@color/grey_font"
        android:layout_gravity="center_horizontal"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
               android:layout_marginBottom="10dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="Add Class"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/black"
               />
    <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AC_class_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
               android:layout_margin="10dp"
                android:gravity="start|center_vertical"
                android:paddingStart="30dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#00838F"
                android:background="#e6e6e6"
                android:hint="Select Date"
                android:drawableEnd="@drawable/ic_event_note"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Select Class">
            <AutoCompleteTextView
                android:id="@+id/AC_classYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Select Subject">
            <AutoCompleteTextView
                android:id="@+id/AC_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AC_class_start_time"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:background="#e6e6e6"
                    android:drawableEnd="@drawable/ic_double_arrow_down"
                    android:gravity="start|center_vertical"
                    android:textAlignment="center"
                    android:hint="Select Start Time"
                    android:textColor="#00838F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="To"
                    android:textAlignment="center"
                    android:textColor="#121212"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AC_class_end_time"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="8dp"
                    android:background="#e6e6e6"
                    android:drawableEnd="@drawable/ic_double_arrow_down"
                    android:gravity="start|center_vertical"
                    android:textAlignment="center"
                    android:hint="Select End Time"
                    android:textColor="#00838F"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Room no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/AC_edt_class_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="701"
               />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/AC_btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:shapeAppearance="@style/ShapeCornerCut"
            android:text="Add"
            android:layout_marginBottom="50dp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/black"
            />



</LinearLayout>