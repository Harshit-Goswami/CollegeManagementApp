<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_bg_edit_profile"
    android:orientation="vertical"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Old Password">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/DEP_edt_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </com.google.android.material.textfield.TextInputLayout>
<!--
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Department">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/DEP_edt_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:endIconMode="password_toggle"
        android:hint="Enter New Password">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/DEP_edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:endIconMode="password_toggle"
        android:hint="Re-Enter New password">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/DEP_edt_reNewPassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/DEP_btnSubmit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Update"
        app:shapeAppearance="@style/ShapeCornerCut"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#121212"
        android:backgroundTint="#FF6F00"
        />
</LinearLayout>