<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddStudent">
    <LinearLayout
        android:id="@+id/AS_years_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/AS_FAB_fy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FY"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:backgroundTint="@color/shrine_pink_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/AS_FAB_sy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SY"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shrine_pink_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/AS_FAB_ty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shrine_pink_100"
            android:text="TY" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/AS_txt_totalStudent"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="FY Resistered Students:-"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AS_years_btns" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/AddStudProgbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:indeterminate="true"
        app:indeterminateAnimationType="contiguous"
        app:indicatorColor="@color/white"
        app:indicatorSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/shrine_pink_100"
        app:trackThickness="20dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rsv_registeredStud"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AS_txt_totalStudent" />
</androidx.constraintlayout.widget.ConstraintLayout>