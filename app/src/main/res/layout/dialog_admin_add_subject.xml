<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_dialog_bg"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_slider_btn"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:backgroundTint="@color/grey_font"
        app:cornerRadius="10dp"
        android:layout_gravity="center_horizontal"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialog_txt_add_subject"
                android:layout_width="match_parent"
                android:layout_height="45dp"
               android:layout_marginBottom="10dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="Add Subject"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/black"
               />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Select Class">
            <AutoCompleteTextView
                android:id="@+id/AS_classYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_TEL_select_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Select Subject">
            <AutoCompleteTextView
                android:id="@+id/AS_class_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_TIL_edt_subName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Subject Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialog_AS_edt_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_AS_btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:shapeAppearance="@style/ShapeCornerCut"
            android:text="Add"
            android:layout_marginBottom="50dp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/black"
            />



</LinearLayout>