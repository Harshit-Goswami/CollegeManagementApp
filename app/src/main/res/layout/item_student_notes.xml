<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/shrine_pink_190"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="-5dp"
    app:cardUseCompatPadding="true"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/IReLViewPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/I_img_download">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pdf_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_picture_as_pdf"
            app:tint="@color/shrine_pink_900" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/I_pdf_title"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/pdf_icon"
            android:text="notes | assignment"
            android:textAllCaps="false"
            android:textColor="@color/shrine_pink_900"
            android:textSize="25sp"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/I_pdf_subject"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/I_pdf_title"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/pdf_icon"
            android:text="some description"
            android:textAllCaps="false"
            android:textColor="@color/shrine_pink_900"
            android:textSize="14dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/I_pdf_description"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/I_pdf_subject"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:background="#FFEBEE"
            android:text="no description"
            android:textAllCaps="false"
            android:textColor="@color/shrine_pink_900"
            android:textSize="16dp" />
    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/I_img_download"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic__file_download"
        android:tint="@color/shrine_pink_900" />
    </RelativeLayout>


    <!-- <com.google.android.material.imageview.ShapeableImageView
         android:id="@+id/iRSstudImg"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:layout_alignParentStart="true"
         android:layout_gravity="center_vertical"
         android:background="@drawable/circular_img_bg"
         android:scaleType="centerCrop"
         app:shapeAppearanceOverlay="@style/circular"
         />-->


</com.google.android.material.card.MaterialCardView>
