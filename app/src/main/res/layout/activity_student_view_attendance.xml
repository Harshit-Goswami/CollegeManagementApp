<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_attendance_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/RL"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_attendance_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Total Attendance "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            style="@style/TextAppearance.Material3.ActionBar.Title"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_present_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_attendance_heading"
                android:text="Present = 0"
                android:textStyle="bold"
                android:textSize="25sp"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/shrine_pink_900"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_absent_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_present_count"
                android:text="Absent = 0"
                android:textStyle="bold"
                android:textSize="25sp"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/shrine_pink_900"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_percentage"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_attendance_heading"
            android:layout_alignBottom="@+id/txt_absent_count"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="0%"
            android:gravity="center"
            android:textColor="@color/shrine_pink_900"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

